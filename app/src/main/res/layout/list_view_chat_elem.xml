<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_from_avatar"
        android:layout_width="@dimen/chat_avatar_dimen"
        android:layout_height="@dimen/chat_avatar_dimen"
        android:layout_marginLeft="@dimen/chat_margin_left_right"
        android:layout_marginStart="@dimen/chat_margin_left_right"
        android:src="@drawable/default_avatar"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_message_margin_bottom"
        android:layout_marginEnd="@dimen/chat_margin_left_right"
        android:layout_marginLeft="@dimen/chat_margin_left_right"
        android:layout_marginRight="@dimen/chat_margin_left_right"
        android:layout_marginStart="@dimen/chat_margin_left_right"
        android:background="@drawable/textview_chat_rounded_from"
        android:paddingBottom="@dimen/chat_message_padding_bottom_up"
        android:paddingLeft="@dimen/chat_message_padding_left_right"
        android:paddingRight="@dimen/chat_message_padding_left_right"
        android:paddingTop="@dimen/chat_message_padding_bottom_up"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>
